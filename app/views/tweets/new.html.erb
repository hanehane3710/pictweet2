<div class="contents row">
  <%= form_tag('/tweets',method: :post) do %>
   <h3>
     投稿する
   </h3>
   <input type="text" name="name" placeholder="Nickname">
   <input type="text" name="image" placeholder="Image_URL">
   <textarea cols="30" name="text" placeholder="text" rows="10"></textarea>
    <!-- cols 1行の最大入力数 rows 表示行数 -->
   <input type="submit" value="SENT">
  <% end %>
</div>
